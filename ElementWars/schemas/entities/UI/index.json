{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://github.com/archyonix-fun/resources/ElementalWars/schemas/ui/2024/05/25/17-05",
  "title": "UI",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "size": {
      "enum": [
        "CHEST_1_ROW",
        "CHEST_2_ROW",
        "CHEST_3_ROW",
        "CHEST_4_ROW",
        "CHEST_5_ROW",
        "CHEST_6_ROW"
      ]
    },
    "content": {
      "type": "object",
      "patternProperties": {
        "^slot\\[+[0-9]+\\]$": {
          "type": "object",
          "patternProperties": {
            "^[A-Z]+[A-Z]$": {
              "type": "object",
              "properties": {
                "view": {
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "array"
                    },
                    "icon": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": ["name"]
                },
                "cost": {
                  "$ref": "../RESOURCES/cost.json"
                },
                "actions": {
                  "patternProperties": {
                    ".*": {
                      "$ref": "../ACTIONS/index.json"
                    }
                  }
                }
              },
              "additionalProperties": false,
              "required": ["view"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "required": ["name", "size"]
}